<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>ithkuil.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level | %msg%xException%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>